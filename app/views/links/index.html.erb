<%= image_tag 'all_links.jpg', class: "img img-responsive center-block" %>
<%= link_to "Add a link", new_link_path, remote: true, class: "btn btn-info btn-lg" %>
<div id="linkList">
  <% @links.each do |link| %>
    <%= render partial: 'link_row', locals: { link: link } %>
  <% end %>
</div>

<!-- Modal -->
<div class="modal fade" id="linkModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="linkModalTitle">Modal title</h4>
      </div>
      <div class="modal-body" id="linkModalBody">
        This shouldn't show
      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div> -->
    </div>
  </div>
</div>




